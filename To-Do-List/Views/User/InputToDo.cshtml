<!--FORM-->

<form asp-controller="User" asp-action="InputToDo" method="Post">
    <div>
            <label asp-for="Id">Id</label>
            <input asp-for="Id" onblur="validateId()"/>
            <span asp-validation-for="Id"></span>
    </div>
    <div>
        <label asp-for="Title">Title</label>
        <input asp-for="Title" onblur="validateTitle()" />
        <span asp-validation-for="Title"></span>
    </div>
    <div>
        <label asp-for="Description">Id</label>
        <input asp-for="Description" onblur="validateDescription()" />
        <span asp-validation-for="Description"></span>
    </div>
    <div>
        <label asp-for="Type">Type</label>
        <select asp-for="Type" asp-items="Html.GetEnumSelectList<Type_of_Element>()">
            <option value="">Select type</option>
        </select>
        <span asp-validation-for="Type"></span>
    </div>

    <button type="button" onclick="submit()">Absenden</button>
    <button type="reset">Reset</button>







</form>